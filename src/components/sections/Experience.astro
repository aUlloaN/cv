---
import Section from "@/components/Section.astro";
import { work } from "@cv";

const shortMonths = ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun', 'Jul', 'Aug', 'Sep', 'Oct', 'Nov', 'Dec'];
---

<Section title="Work Experience">
  <ul>
    {
      work.map(({ name, startDate, endDate, position, summary, highlights, url }) => {
        const startYear = `${shortMonths[new Date(startDate).getMonth()]} ${new Date(startDate).getFullYear()}`;
        const endYear = endDate != null ? `${shortMonths[new Date(endDate).getMonth()]} ${new Date(endDate).getFullYear()}` : "Present";
        const yearRange = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>
                    <a href={url} title={`Ver ${name}`} target="_blank">
                      {name}
                    </a>
                  </h3>
                  <time>{yearRange}</time>
                </div>
                <h4>{position}</h4>
              </header>
              <footer>
                <p>{summary}</p>
              </footer>
            </article>
          </li>
        );
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article a {
    color: #111;
  }

  article a:hover {
    text-decoration: underline;
  }

  article h4 {
    color: #222;
    font-weight: 400;
  }

  header {
    display: flex;
    flex-direction: column;
    margin-bottom: 4px;
  }

  header > div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  time {
    color: #555;
    font-size: 0.85rem;
    cursor: default;
  }

  @media (width <= 700px) {
    time {
      text-align: right;
    }
  }
</style>
