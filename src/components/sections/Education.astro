---
import Section from "@/components/Section.astro";
import { education } from "@cv";
---

<Section title="Education">
  <ul>
    {
      education.map(({ institution, startDate, endDate, area }) => {
        const startYear = new Date(startDate).getFullYear();
        const endYear = endDate != null ? new Date(endDate).getFullYear() : "Present";
        const yearRange = `${startYear} - ${endYear}`;

        return (
          <li>
            <article>
              <header>
                <div>
                  <h3>{institution}</h3>
                  <time>{yearRange}</time>
                </div>
              </header>
              <footer>
                <p>{area}</p>
              </footer>
            </article>
          </li>
        )
      })
    }
  </ul>
</Section>

<style>
  ul {
    display: flex;
    flex-direction: column;
    gap: 32px;
  }

  article h3 {
    font-weight: 500;
    color: #111;
  }

  article header {
    display: flex;
    flex-direction: column;
    margin-bottom: 4px;
  }

  article header > div {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  article time {
    color: #555;
    font-size: 0.85rem;
  }
</style>
